if [[ "$RUNTIME" == "wasmtime" ]]; then
	exec wasmtime run --dir=/ --env GOROOT="$GOROOT" --env PWD="$PWD" --max-wasm-stack 1048576 "$1" -- "${@:2}"
else
	exec wazero run -mount /:/ -env-inherit -cachedir "${TMPDIR}"/wazero "$1" "${@:2}"
fi
