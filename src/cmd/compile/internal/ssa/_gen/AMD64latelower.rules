// split 3 operand LEA.
(LEA(Q|L)1 <t> [c] {s} x y) && c != 0 => (ADD(Q|L)const [c] (LEA(Q|L)1 <t> [0] {s} x y))
(LEA(Q|L)4 <t> [c] {s} x y) && c != 0 => (ADD(Q|L)const [c] (LEA(Q|L)4 <t> [0] {s} x y))
(LEA(Q|L)8 <t> [c] {s} x y) && c != 0 => (ADD(Q|L)const [c] (LEA(Q|L)8 <t> [0] {s} x y))
